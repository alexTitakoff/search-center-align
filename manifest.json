{
    "name": "Search center aligner ",
    "version": "1.4",
    "manifest_version": 2,

    "description": "Search center aligner",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png", 
            "38": "images/icon_38.png"
        },
        "default_popup": "html/main.html"
    },


    "background": {
    },

    "permissions" : [
      "https://yandex.ru/*",
      "https://www.yandex.ru/*", 
      "https://www.google.ru/*",
      "https://www.duckduckgo.com/*"
    ],
    "content_scripts": [
            {
                "matches": ["https://yandex.ru/*","https://www.yandex.ru/*"],
                "exclude_matches": [
                    "https://yandex.ru/", 
                    "https://www.yandex.ru/", 
                    "https://yandex.ru/images/*", 
                    "https://www.yandex.ru/images/*"
                ],
                "run_at": "document_start",
                "js": ["js/align-yandex.js"]
               
            },
            {
                "matches": ["https://www.google.ru/*", "https://www.google.com/*"],
                "exclude_matches": ["https://www.google.ru/", "https://www.google.com/"],
                "run_at": "document_start",
                "js": ["js/align-google.js"]
            },
            {
              "matches": ["https://duckduckgo.com/*"],
              "exclude_matches": ["https://duckduckgo.com/"],
              "run_at": "document_start",
              "js": ["js/align-duckduckgo.js"]
          }
    ],

    "options_page": "html/options.html",
    "homepage_url": "http://yourdomainhere.com/"
}